<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/snackbar_need"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <include layout="@layout/toobar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center">
    <!--<TextView
        android:id="@+id/tv_charge_progress"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@drawable/shape"
        android:elevation="@dimen/activity_horizontal_margin"
        />-->
        <com.xs.widgetlib.ww.WaterWaveView
            android:id="@+id/waterwave"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/white">
        <TextView
            android:padding="5dp"
            android:id="@+id/tv_show_other_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            />

    </android.support.v7.widget.CardView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_connect"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:elevation="10dp"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/white"
        android:shadowRadius="20"
        android:text="Connect"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_fm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <fragment
        android:id="@+id/fm_log"
        android:name="com.xs.charge.logger.LogFragment"


        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_send"
                android:layout_width="120dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:background="@drawable/button_shape"
                android:text="发送数据"
                android:textColor="@android:color/white"/>
    </FrameLayout>
</LinearLayout>
